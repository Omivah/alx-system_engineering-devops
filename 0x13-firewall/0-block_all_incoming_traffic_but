# Configure ufw so that it blocks all incoming traffic,exept TCP ports:
# 22 (SSH)
# 443 (HTTPS SS
#+ except for TCP ports 22, 443 and 80.

apt-get install ufw
sed -i 's/IPV6=.*/IPV6=yes/' /etc/default/ufw
ufw status
ufw enable
ufw default deny incoming
ufw default allow outgoing
ufw allow 22/tcp
ufw allow 443/tcp
ufw allow 80/tcp
